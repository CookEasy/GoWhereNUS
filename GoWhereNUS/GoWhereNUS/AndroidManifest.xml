        <activity
            android:name="com.is3261.GoWhereNUS.LauncherActivity"
            android:label="GoWhere@NUS" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>