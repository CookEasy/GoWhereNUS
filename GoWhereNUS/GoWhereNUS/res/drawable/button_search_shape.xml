<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#f8f9fa" />

            <stroke android:width="1dp" android:color="#D5DCDE" />

            <corners android:radius="1dp" />
        </shape>
        
        </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="14dp" />

            <size android:height="30dp" android:width="270dp" />

            <gradient android:angle="90" android:centerColor="#FFFFFF" android:centerX="0%" android:endColor="#D1D1D1" android:startColor="#E8E8E8" android:type="linear" />

            <size android:height="30dp" android:width="270dp" />

            <stroke android:width="1dp" android:color="#D5DCDE" />
        </shape>
        
        </item>

</selector>